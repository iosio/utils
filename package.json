{
  "name": "@iosio/utils",
  "version": "2.0.2",
  "description": "A collection of helpful JavaScript utility functions",
  "main": "lib/index.js",
  "watch": {
    "copy_to_example": {
      "patterns": [
        "src"
      ],
      "ignore": "node_modules"
    }
  },
  "scripts": {
    "watch:src": "npm-watch",
    "copy_to_example": "cp -r src/ example/src/@iosio",
    "clean:build": "./node_modules/.bin/rimraf dist",
    "babel": "cross-env BABEL_ENV=production babel src --out-dir lib",
    "build": "npm run clean:build && npm run babel",
    "quicky": "node quicky.js",
    "test": "jest",
    "watch:test": "jest --watchAll",
    "coverage": "jest --coverage"
  },
  "keywords": [
    "JavaScript",
    "utilities",
    "helper-functions"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iosio/utils.git"
  },
  "peerDependencies": {
    "object-assign": "4.1.1"
  },
  "author": "iosio",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.2.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-es2015-modules-umd": "^6.24.1",
    "babel-preset-react-app": "^3.1.1",
    "babel-runtime": "^6.26.0",
    "cross-env": "^5.1.6",
    "jest": "^23.2.0",
    "npm-watch": "^0.3.0",
    "regenerator-runtime": "^0.12.0",
    "rimraf": "^2.6.2"
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "dependencies": {
    "dateformat": "^3.0.3"
  },
  "jest": {
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/**"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/example/",
      "/lib/",
      "/coverage/"
    ]
  }
}
